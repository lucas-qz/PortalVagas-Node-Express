<style>
  .text-center{color:#000000} body { padding: 0px 30px; background-color:
  #ebebeb; margin-bottom: 0px; color: #005cbf; } .back-link{width: 30%;} .row {
  background-color: #fff; padding: 10px; box-shadow: 0 20px 27px 0 rgb(0 0 0 /
  5%); border: var(--bs-card-border-width) solid var(--bs-card-border-color);
  border-radius: var(--bs-card-border-radius); margin-bottom: 20px; }
</style>

<div id="job-view-container" class="container">
  <div class="row text-center">
    <a class="back-link main-color" href="/">Voltar</a>
    <div id="img-container" class="col-md-12">
      <img src="{{job.dataValues.link}}" alt="Company" />
    </div>
    <div class="col-md-12">
      <h1 class="main-color">{{job.dataValues.title}}</h1>
      <p class="bold">Descrição da vaga:</p>
      <p class="job-desc">{{job.dataValues.description}}</p>
      <p><span class="bold">Salário informado:</span>
        R${{job.dataValues.salary}}</p>
      <p>
        Para trabalhar na
        <span class="bold main-color">{{job.dataValues.company}}</span>
        envie um e-mail para a
        <a
          class="main-color"
          href="mailto:{{job.dataValues.email}}"
        >{{job.dataValues.email}}</a>
      </p>
    </div>

  </div>
</div>

<div class="candidate-list">
  <div class="candidate-list-box card mt-4">
    <div class="p-4 card-body">
    </div>
  </div>
</div>